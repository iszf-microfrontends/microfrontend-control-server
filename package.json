{
  "name": "microfrontend-control-server",
  "private": true,
  "scripts": {
    "dev": "nodemon src/index.ts",
    "start": "pnpm build && pnpm serve",
    "serve": "node dist/index.js",
    "build": "ts-node esbuild.config.ts",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
    "format": "prettier . --write --ignore-path node_modules/@iszf-microfrontends/prettier-config/.prettierignore",
    "prep": "pnpm format && pnpm lint && git add .",
    "clean": "rimraf dist logs node_modules"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "cross-fetch": "^4.0.0",
    "express": "^4.18.2",
    "joi": "^17.12.1",
    "morgan": "^1.10.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@iszf-microfrontends/eslint-config": "file:../eslint-config",
    "@iszf-microfrontends/prettier-config": "file:../prettier-config",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.17",
    "dotenv": "^16.4.2",
    "esbuild": "^0.20.0",
    "eslint": "^8.56.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
