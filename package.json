{
  "name": "microfrontend-control-server",
  "private": true,
  "scripts": {
    "dev": "nodemon src/index.ts",
    "start": "pnpm build && pnpm serve",
    "serve": "node dist/index.js",
    "build": "webpack --progress",
    "lint": "eslint . --ext ts",
    "lint:fix": "eslint . --ext ts --fix",
    "format": "prettier . --write --ignore-path node_modules/@iszf-microfrontends/prettier-config/.prettierignore",
    "prep": "pnpm format && pnpm lint:fix && git add ."
  },
  "dependencies": {
    "cross-fetch": "^3.1.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "joi": "^17.9.2",
    "morgan": "^1.10.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@babel/preset-typescript": "^7.22.5",
    "@iszf-microfrontends/eslint-config": "^0.0.5",
    "@iszf-microfrontends/prettier-config": "^0.0.2",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.5",
    "@types/node": "^20.6.5",
    "babel-loader": "^9.1.3",
    "dotenv-webpack": "^8.0.1",
    "eslint": "^8.51.0",
    "nodemon": "^2.0.22",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.5",
    "webpack": "^5.88.1",
    "webpack-cli": "^5.1.4"
  }
}
