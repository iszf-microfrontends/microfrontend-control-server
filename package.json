{
  "name": "microfrontend-control-server",
  "private": true,
  "scripts": {
    "dev": "nodemon src/index.ts",
    "start": "pnpm build && pnpm serve",
    "serve": "node dist/index.js",
    "build": "ts-node esbuild.config.ts",
    "lint": "eslint . --ext ts",
    "lint:fix": "eslint . --ext ts --fix",
    "format": "prettier . --write --ignore-path node_modules/@iszf-microfrontends/prettier-config/.prettierignore",
    "prep": "pnpm format && pnpm lint:fix && git add .",
    "clean": "rimraf dist logs node_modules"
  },
  "dependencies": {
    "cross-fetch": "^4.0.0",
    "express": "^4.18.2",
    "joi": "^17.11.0",
    "morgan": "^1.10.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@iszf-microfrontends/eslint-config": "file:../eslint-config",
    "@iszf-microfrontends/prettier-config": "file:../prettier-config",
    "@types/express": "^4.17.19",
    "@types/morgan": "^1.9.6",
    "@types/node": "^20.8.6",
    "dotenv": "^16.3.1",
    "esbuild": "^0.19.4",
    "eslint": "^8.51.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}
